<Window x:Class="AndroidToPC_PC.RequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AndroidToPC_PC"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="请求配对" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="deveiceName" Grid.ColumnSpan="2" Text="HUAWEI请求与你配对,是否同意？" Margin="10" TextWrapping="Wrap" FontSize="20" />

        <Button x:Name="yesBtn" Grid.Row="1" Content="是" Margin="20 0 10 5" Click="yesBtn_Click" />
        <Button x:Name="noBtn" Grid.Row="1" Grid.Column="1" Content="否" Margin="10 0 20 5" Click="noBtn_Click" />

    </Grid>
</Window>
